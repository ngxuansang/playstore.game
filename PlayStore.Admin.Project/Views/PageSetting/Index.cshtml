@using PlayStore.Project.ViewModels.PlayStore.Project.ViewModel.AdminPage.PageSetting;
@model CarouselSettingViewModel
<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <ul class="tabs tab-demo z-depth-1" style="width: 100%;">
                <li class="tab col s3" id="tab_carousel_view"><a href="#carousel_view" class="active">Carousel View</a></li>
                <li class="tab col s3 disabled" id="tab_carousel_detail"><a href="#detail_carousel" class="">Carousel Detail</a></li>
                <li class="tab col s3" id="tab_carousel_create"><a class="" href="#create_carousel">Create carousel</a></li>
            </ul>
        </div>
        <div id="carousel_view" class="col s12" style="display: block;margin-top: -7px;">
            <div class="row">
                <div class="card ">
                    <div class="card-title"></div>
                    <div class="card-content">
                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th data-field="id">ID</th>
                                    <th data-field="image">Image</th>
                                    <th data-field="beginDate">Begin date</th>
                                    <th data-field="endDate">End date</th>
                                    <th data-field="status">Status</th>
                                    <th data-field="sortOrder">Sort order</th>
                                    <th data-field="action">#</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>197</td>
                                    <td width="200">
                                        <img src="http://127.0.0.1/image/Resident-Evil-6.jpg" class="responsive-img" alt="" />
                                    </td>
                                    <td>
                                        <div class="input-field">
                                            <input id="begin_date" type="datetime" value="@DateTime.Now" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-field">
                                            <input id="end_date" type="datetime" value="@DateTime.Now" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="switch m-b-md">
                                            <label>
                                                <input type="checkbox" checked>
                                                <span class="lever"></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-field">
                                            <input id="last_name" type="text" value="1" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row">
                                            <button data-button="detail" class="waves-effect waves-light btn blue m-b-xs"><i class="material-icons left">more</i>Detail</button>
                                            <button data-button="save" class="waves-effect waves-light btn green m-b-xs"><i class="material-icons left">save</i>Save</button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>197</td>
                                    <td width="200">
                                        <img src="http://127.0.0.1/image/1312500-tomb-raider-wallpaper-for-pc.jpg" class="responsive-img" alt="" />
                                    </td>
                                    <td>
                                        <div class="input-field">
                                            <input id="begin_date" type="datetime" value="@DateTime.Now" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-field">
                                            <input id="end_date" type="datetime" value="@DateTime.Now" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="switch m-b-md">
                                            <label>
                                                <input type="checkbox" checked>
                                                <span class="lever"></span>
                                            </label>
                                        </div>
                                    </td>
                                    <td width="80">
                                        <div class="input-field">
                                            <input id="last_name" type="text" value="1" class="validate">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row">
                                            <button data-button="detail" class="waves-effect waves-light btn blue m-b-xs"><i class="material-icons left">more</i>Detail</button>
                                            <button data-button="save" class="waves-effect waves-light btn green m-b-xs"><i class="material-icons left">save</i>Save</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div id="create_carousel" class="col s12" style="display: none;margin-top: -7px;">
            <div class="card ">
                <div class="card-title"></div>
                <div class="card-content">
                    @Html.Action("Create", "PageSetting")
                </div>
            </div>
        </div>
        <div id="detail_carousel" class="col s12" style="display: none;margin-top: -7px;">
            <div class="card white darken-1">
                <div class="card-content">
                    <span class="card-title">Basic Card</span>
                    <p>
                        I am a very simple card. I am good at containing small bits of information.
                        I am convenient because I require little markup to use effectively.
                    </p>
                </div>
                <div class="card-action right-align">
                    <a class="waves-effect waves-light green btn" id="btn_save">Save change</a>
                    <a class="waves-effect waves-light red btn" id="btn_close">Close</a>
                </div>
            </div>
        </div>
    </div>
</main>